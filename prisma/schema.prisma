generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Thread {
  id          String     @id @default(cuid())
  authorName  String
  authorImage String
  image       String?
  captions    String
  userId      String?
  createdAt   String
  comments    Comments[]
  likes       String[]
}

model Comments {
  id          String  @id @default(cuid())
  authorName  String
  authorImage String
  createdAt   String
  threadId    String?
  Thread      Thread? @relation(fields: [threadId], references: [id])
}
